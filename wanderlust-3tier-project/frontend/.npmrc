# Disable progress bar for faster installs
progress=false

# Skip funding messages
fund=false

# Skip audit reports
audit=false

# Skip update checks
update-notifier=false

# Increase network reliability
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Set timeout higher
network-timeout=100000

# Use strict-ssl
strict-ssl=true

# Set cache settings
cache-min=3600
prefer-offline=true

# Set concurrency based on available CPUs (adjust if needed)
jobs=4
